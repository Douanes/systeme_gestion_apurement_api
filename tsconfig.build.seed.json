{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "libs/*": ["libs/*"]
    }
  },
  "include": [
    "prisma/seed.ts",
    "prisma/seeds/**/*.ts",
    "src/permissions/constants/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
